{
    "name": "final-gene/rest-resource-authentication-module",
    "description": "Authentication functionality for REST resources",
    "type": "library",
    "homepage": "https://github.com/final-gene/zf2-rest-resource-authentication-module",
    "license": "MIT",
    "authors": [
        {
            "name": "Frank Giesecke",
            "email": "frank.giesecke@final-gene.de",
            "role": "Developer"
        },
        {
            "name": "Frank Emmrich",
            "email": "kontakt@frank-emmrich.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "laminas-api-tools/api-tools-api-problem": "^1.5",
        "laminas-api-tools/api-tools-rest": "^1.7",
        "laminas/laminas-config": "^3.7",
        "laminas/laminas-dependency-plugin": "^2.4",
        "laminas/laminas-modulemanager": "^2.12",
        "symfony/console": "^5.4"
    },
    "require-dev": {
        "laminas/laminas-filter": "^2.22.0",
        "laminas/laminas-form": "^3.4.0",
        "laminas/laminas-i18n": "^2.14.0",
        "laminas/laminas-inputfilter": "^2.19.1",
        "laminas/laminas-log": "^2.15.0",
        "laminas/laminas-serializer": "^2.13.0",
        "laminas/laminas-stdlib": "^3.13.0",
        "laminas/laminas-test": "^4.3.0",
        "laminas/laminas-validator": "^2.16.0",
        "phpspec/prophecy-phpunit": "^2.4",
        "phpunit/phpunit": "^9.5.13"
    },
    "autoload": {
        "psr-4": {
            "FinalGene\\RestResourceAuthenticationModule\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FinalGene\\RestResourceAuthenticationModuleTest\\": "tests/src"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "archive": {
        "exclude": [
            "/.*",
            "/composer.*",
            "/phpunit.*",
            "/tests"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "laminas/laminas-dependency-plugin": true
        },
        "platform": {
            "php": "7.4.33",
            "ext-intl": "0"
        }
    }
}
