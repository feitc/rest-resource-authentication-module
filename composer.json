{
    "name": "final-gene/rest-resource-authentication-module",
    "description": "Authentication functionality for REST resources",
    "type": "library",
    "homepage": "https://github.com/final-gene/zf2-rest-resource-authentication-module",
    "license": "MIT",
    "authors": [
        {
            "name": "Frank Giesecke",
            "email": "frank.giesecke@final-gene.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "laminas/laminas-config": "^2.5",
        "laminas/laminas-modulemanager": "^2.5",
        "laminas-api-tools/api-tools-api-problem": "^1.1",
        "laminas-api-tools/api-tools-rest": "^1.2",
        "league/uri": "^4.0",
        "laminas/laminas-dependency-plugin": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "laminas/laminas-filter": "^2.5",
        "laminas/laminas-form": "^2.5",
        "laminas/laminas-i18n": "^2.5",
        "laminas/laminas-inputfilter": "^2.5",
        "laminas/laminas-log": "^2.5",
        "laminas/laminas-serializer": "^2.5",
        "laminas/laminas-stdlib": "^2.5",
        "laminas/laminas-test": "^2.5",
        "laminas/laminas-validator": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "FinalGene\\RestResourceAuthenticationModule\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FinalGene\\RestResourceAuthenticationModuleTest\\": "tests/src"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "archive": {
        "exclude": [
            "/.*",
            "/composer.*",
            "/phpunit.*",
            "/tests"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "laminas/laminas-dependency-plugin": true
        }
    }
}
